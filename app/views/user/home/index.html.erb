<div class="container">
  <div class="row">
    <div class="col-sm-12">
    	1 BTC = &nbsp;
    	<%= number_to_currency @btc_jpy.value, delimiter: ",", unit: "¥", format: "%u %n", precision: 0 %>
    </div>
    <div class="col-sm-12">
    	1 BTC = &nbsp;
    	<%= number_to_currency @btc_usd.value, delimiter: ",", unit: "$", format: "%u %n", precision: 0 %>
    </div>
    <div class="col-sm-12">
    	1 USD = &nbsp;
    	<%= number_to_currency @usd_jpy.value, delimiter: ",", unit: "¥", format: "%u %n", precision: 0 %>
    </div>
  </div>
</div>